<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <li><%= dose.ingredient.name %></li>
  <% end %>
  <li><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></li>
  <li><%= link_to "Return to cocktails", cocktails_path %></li>
</ul>
