<br>
<div class="card-deck">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
      <% if cocktail.image %>
        <div style="max-height: 500px"><%= image_tag cocktail.image, alt: "Moscow Mule", class: "card-img-top card-image"%></div>
      <% else %>
        <%= image_tag "mm.jpg", alt: "Moscow Mule", class: "card-img-top"%>
      <% end %>
      <div class="card-body">
          <h2><%= cocktail.name.upcase %></h2>
          <p><%= link_to "How to make it", cocktail_path(cocktail) %></p>
      </div>
    </div>
  <% end %>
</div>
